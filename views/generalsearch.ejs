<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booky Search</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script> src="scripts/search.js"</script>
    <link rel="stylesheet" href="css/styles.css">
</head>

<style>
   
</style>

<body>
    <h1>Booky Contacts</h1>
        <div class="container-fluid">
        <div class="row contents">
            <div class="col-md-4 filters">
                <h3>Filter By</h3>
                    <div class="form-group">
                        <label>Search first name, last name or email</label>
                        <input id="filterText" class="form-control" type="text">
        
                    </div>
                    <div class="sex">
                        <label><strong>Sex</strong></label>
        
                        <div class="form-check">
                            <input id="anyCheckbox" class="form-check-input" value="" name="gender" type="radio">
                            <label for="anyChekcbox" class="form-check-label">Any</label>
                        </div>
                        <div class="form-check">
                            <input id="maleCheckbox" class="form-check-input" value="m" name="gender" type="radio">
                            <label for="maleChekcbox" class="form-check-label">Male</label>
                        </div>
                        <div class="form-check">
                            <input id="anyCheckbox" class="form-check-input" value="f" name="gender" type="radio">
                            <label for="femaleChekcbox" class="form-check-label">Female</label>
                        </div>
        
                    </div>
                    <div class="age">
                        <!-- <input id="ageRange" type="range" name="" min="" max=""> -->
                        <div class="form-group">
                            <label for=""><strong>Age range: </strong> <span id="minAge"> any</span> - <span id="maxAge">any</span> &nbsp;</label>
                            <div id="checkbox" class="form-check">
                                <input id="ageRangeCheckBox" class="form-check-input" type="checkbox">
                                <label for="ageRangeCheckBox" class="form-check-labeld">Enable</label>
                            </div>
                            <div id="slider"></div>
                        </div>
                    </div>
                    <div>
                        <button id="filterBtn" class="filterBtn btn btn-primary">Filter</button>
                        <button id="downloadFilter" class="downloadFilter btn btn-outline-dark">Download</button>
                    </div>
            </div>
            
    
    
            <!-- Find all data in database and display in the div -->
            <div class="col-md-8 filterResults">
                <h3>Filtered Results</h3>
                <table id="queryTable">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Sex</th>
                        <th>Age</th>
                    </tr>
                    <tbody id="tbody">
                        <%contact.forEach(function(query){ %>
                            <tr id="queryRow">
                                <td>
                                    <%= query.fName %>
                                </td>
                                <td>
                                    <%= query.lName %>
                                </td>
                                <td>
                                    <%= query.email %>
                                </td>
                                <td>
                                    <%= query.phoneNum %>
                                </td>
                                <td>
                                    <%= query.sex %>
                                </td>
                                <td>
                                    <%= query.age %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="scripts/search.js">
</script>
</body>


</html>