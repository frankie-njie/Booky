<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booky</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- <script>
        src = "scripts/home.js"
    </script> -->
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="header navbar navbar-light">

        <div class="navicons navbar brand">
            <i class="fas fa-users fa-2x "><sup class="badge badge-primary"><%= countAll %></i> </sup>
            <i class="fas fa-male fa-2x nav-item"><sup class="badge badge-primary"><%= maleContacts %></sup></i>
            <i class="fas fa-female fa-2x nav-item"><sup class="badge badge-primary"><%= femaleContacts %></sup></i>
        </div>
        <!-- <form action="/" class="custom-file" method="post" enctype="multipart/form-data">
            <input type="file" class="custom-file-input" name="csv-file" accept=".csv, .xlsx, .xltx" >
            <label class="custom-file-label" for="file"></label>
            <input type="submit" value="upload">
        </form> -->

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#uploadModal">
            upload
        </button>

        <!-- Modal -->
        <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadCsvfile" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Upload Csv File</h5>
                        <form action="/" class="custom-file" method="post" enctype="multipart/form-data">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="file-loading">
                            <input type="file" class="" name="csv-file" accept=".csv, .xlsx, .xltx" >
                        </div>
                        <div id="kartik-file-errors"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <!-- <button type="button" class="btn btn-primary" title="Your custom upload logic">Save</button> -->
                        <input type="submit" class="btn btn-primary" value="upload">
                    </div>
                </form>
                </div>
            </div>
        </div>

    </div> 

    <div class="search-booky" action="/search" method="GET">
        <h1>Booky</h1>
        <div class="search-group input-group">
            <input class="searchbar form-control" type="text" placeholder="Search by Name or email" name="search" id="searchText">
            <div class="input-group-append">
                <button id="search-btn" class="btn btn-primary"><i class="icon fas fa-search fa-lg"></i></button>
            </div>
        </div>
          
        <div id="match-list" class="match-list"></div>
    </div>
    <div id="popup" class="popup"></div>
    <!-- <hr> -->
    
    <div class="footer container-fluid">
        <div class="row justify-content-center ">
            <div class="col-md-2"><p class="footercontent col-md-2">Logo</p></div>
            <div class="col-md-8"><p class="footercontent align-items-center">Copyright @ ActiveSpaces</p></div>
            <div class="col-md-2">
                <button class="btn btn-outline-dark">Download</button>
            </div>
        </div>
    </div>
        
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="scripts/home.js"></script>  
</body>
</html>